ISSUER_REGISTRY_CONTRACT_ADDRESS=
DOCUMENT_REGISTRY_CONTRACT_ADDRESS=

# ------------------------------
# Pinata IPFS Service (for V2 Hybrid Storage)
# ------------------------------
# Sign up at: https://pinata.cloud
# Get API Keys: Dashboard → API Keys → New Key
# Free tier: 1GB storage | Paid: $20/month for 1TB
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_GATEWAY=https://gateway.pinata.cloud/ipfs

# ------------------------------
# DocumentRegistry V2 (Hybrid Storage)
# ------------------------------
# Deploy with: npx hardhat run scripts/deploy-v2.js --network sepolia
DOCUMENT_REGISTRY_V2_ADDRESS=your_v2_contract_address_here

# ------------------------------
# API Version Control
# ------------------------------
# Default API version (1 or 2)
DEFAULT_API_VERSION=2

# Enable/disable specific API versions
ENABLE_V1_API=true
ENABLE_V2_API=true
